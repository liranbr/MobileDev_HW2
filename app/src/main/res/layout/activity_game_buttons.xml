<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="NestedWeights"

    tools:context=".GameButtonsActivity"
    android:id="@+id/GameButtons_LLO_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#202124">

    <include layout="@layout/game_screen"
        android:id="@+id/GameButtons_LLO_gameScreen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11" />

    <GridLayout
        android:id="@+id/GameButtons_GLO_controls"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:columnCount="3"
        android:rowCount="3"
        android:paddingHorizontal="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonUp"
            android:soundEffectsEnabled="false"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="1"
            android:backgroundTint="#4499ff"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textSize="25sp"
            android:text="UP" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDown"
            android:soundEffectsEnabled="false"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="1"
            android:backgroundTint="#4499ff"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textSize="25sp"
            android:text="DOWN" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonLeft"
            android:soundEffectsEnabled="false"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="0"
            android:backgroundTint="#4499ff"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textSize="25sp"
            android:text="LEFT" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonRight"
            android:soundEffectsEnabled="false"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="2"
            android:backgroundTint="#4499ff"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textSize="25sp"
            android:text="RIGHT" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonAction"
            android:soundEffectsEnabled="false"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="1"
            android:backgroundTint="#ffffff"
            android:textColor="#4499ff"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:autoSizeTextType="uniform"
            android:lines="1"
            android:text="DASH" />

    </GridLayout>

</LinearLayout>