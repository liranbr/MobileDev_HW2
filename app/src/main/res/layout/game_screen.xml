<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".GameManager"
    tools:ignore="NestedWeights"

    android:id="@+id/game_LLO_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#202124">

    <LinearLayout
        android:id="@+id/game_LLO_topbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >
        <LinearLayout
            android:id="@+id/game_LLO_healthbar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" />
        <TextView
            android:id="@+id/game_TXT_score"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textColor="#4499ff"
            android:autoSizeTextType="uniform"
            android:paddingEnd="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/game_LLO_grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical"
        android:background="@drawable/grid_cell_background"
        android:padding="2dp" />

</LinearLayout>